{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./bin",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*",
        "src/helper/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
